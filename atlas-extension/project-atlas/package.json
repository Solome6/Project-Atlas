{
    "name": "project-atlas",
    "displayName": "Project Atlas",
    "description": "Codebase visualizer",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.50.0"
    },
    "categories": [
        "Visualization"
    ],
    "activationEvents": [
        "onCommand:project-atlas.helloWorld",
        "onCommand:project-atlas.openAtlas"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "project-atlas.helloWorld",
                "title": "Hello World"
            },
            {
                "command": "project-atlas.openAtlas",
                "title": "Project Atlas: Open Atlas"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint src --ext ts",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.50.0",
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.0.0",
        "@types/node": "^12.11.7",
        "eslint": "^7.9.0",
        "@typescript-eslint/eslint-plugin": "^4.1.1",
        "@typescript-eslint/parser": "^4.1.1",
        "glob": "^7.1.6",
        "mocha": "^8.1.3",
        "typescript": "^4.0.2",
        "vscode-test": "^1.4.0"
    },
    "dependencies": {
        "@svgdotjs/svg.js": "^3.0.16",
        "svgdom": "^0.1.8"
    }
}
